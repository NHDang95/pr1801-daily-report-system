  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
  <span class="navbar-toggler-icon"></span>
  </button>
  <!-- SideNav slide-o button -->
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to t("Home"), root_path ,:class => "nav-link"%><span class="sr-only">(current)</span>
      </li>
      <li class="nav-item">
        <%= link_to t("About"), "#" ,:class => "nav-link"%>
      </li>
      <li class="nav-item dropdown">
        <%= link_to t("Language"),"#",:class => "nav-link dropdown-toggle","data-toggle"=>"dropdown","role"=>"button","aria-haspopup"=>true,"aria-expanded"=>false %>
        <div class="dropdown-menu">
          <%= link_to_unless_current "English",locale: "en" %>
          <div class="dropdown-divider"></div>
          <%= link_to_unless_current "Japan", locale: "jp" %>
        </div>
      </li>
      <li class="nav-item dropdown">
        <%= link_to t("Contact"), "#", :class => "nav-link dropdown-toggle","data-toggle" => "dropdown","role" => "button","aria-haspopup" => true ,"aria-expanded" => false %>
        <div class="dropdown-menu">
          <%= link_to t("ContactTeam"), "#", :class => "dropdown-item" %>
          <%= link_to t("ContactEmail"), "#", :class => "dropdown-item" %>
          <%= link_to t("ContactSocial"), "#", :class => "dropdown-item" %>
          <div class="dropdown-divider"></div>
          <%= link_to t("ContactManager"), "#", :class => "dropdown-item" %>
        </div>
      </li>
    </ul>
    <ul class="nav navbar-nav nav-flex-icons mx-auto">
      <li class="nav-item">
        <%= link_to t("Signup"), signup_path ,:class => "nav-link clearfix d-none d-sm-inline-block" %>
      </li>
      <div id="bs-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li class="dropdown">
            <% if logged_in? %>
            <li><%= link_to t("Users"), "#" %></li>
            <li class="dropdown">
              <span href="http://www.jquery2dotnet.com" class="dropdown-toggle" data-toggle="dropdown">Account<b class="caret"></b></span>
              <ul class="dropdown-menu">
                <li><%= link_to t("Profile"), current_user %></li>
                <li><%= link_to t("Settings"), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li><%= link_to t("Signout"), logout_path,method: :delete %></li>
              </ul>
            </li>
            <% else %>
            <%= link_to t("Signin"), "#" ,class:  "nav-link clearfix  d-sm-inline-block dropdown-toggle","data-toggle" => "dropdown" %>
